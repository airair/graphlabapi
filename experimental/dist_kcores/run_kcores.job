#PBS -N run_kcores
#PBS -l nodes=7:ppn=8 -j oe


cd $PBS_O_WORKDIR
cat $PBS_NODEFILE | uniq > .mfile
CLASSPATH=$CLASSPATH:`hadoop classpath`

/opt/openmpi/bin/mpiexec --hostfile .mfile -n 14 \
        -x CLASSPATH \
        ./dist_kcores --graph hdfs://bros.ml.cmu.edu/data/webgraphs/domain_graph/edata_ordered/ \
        --ncpus=8 \
        --dgraphopts="(ingress=random)"

rm .mfile
exit 0
